<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_left"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right"
        app:layout_constraintGuide_end="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/displayBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="0"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/guide_right"
        app:layout_constraintStart_toStartOf="@+id/guide_left"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="114dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guide_right"
        app:layout_constraintStart_toStartOf="@+id/guide_left"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="7"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="8"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="9"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn_action_division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#00BCD4"
            android:tag="op"
            android:text="/"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="4"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn7"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="5"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn8"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="6"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn9"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn_action_multiple"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#00BCD4"
            android:tag="op"
            android:text="*"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn6"
            app:layout_constraintTop_toBottomOf="@+id/btn_action_division"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="1"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="2"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="3"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn_action_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#00BCD4"
            android:tag="op"
            android:text="-"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btn_action_multiple"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#8E8E8E"
            android:text="C"
            app:layout_constraintBottom_toTopOf="@+id/btnResult"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btn"
            app:layout_constraintWidth_percent="0.50" />

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="nb"
            android:text="0"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn_action_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#00BCD4"
            android:tag="op"
            android:text="+"
            app:layout_constraintHeight_percent="0.20"
            app:layout_constraintStart_toEndOf="@+id/btnClear"
            app:layout_constraintTop_toBottomOf="@+id/btn_action_minus"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FF9800"
            android:text="="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_action_plus"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="446dp" />

</androidx.constraintlayout.widget.ConstraintLayout>